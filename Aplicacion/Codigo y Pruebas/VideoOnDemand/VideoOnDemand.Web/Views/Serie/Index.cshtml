@model IEnumerable<VideoOnDemand.Web.Models.SerieViewModel>

@{
	ViewBag.Title = "Index";
}

<h2>Administrar Serie</h2>

<p>
	<button id="btnAbrirRegistro"
			class="btn btn-default" type="button">
		Registrar
	</button>
	@Html.ActionLink("Crear nueva serie", "Create")
</p>

<table class="table table-bordered" style="border:ridge">
	<tr class="text-white" style="background-color:midnightblue">
		<th>
			@Html.DisplayNameFor(model => model.Nombre)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Descripcion)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.DuracionMin)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.FechaDeRegistro)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.FechaDeLanzamiento)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Estatus)
		</th>
		<th>@Html.DisplayName("Opciones")</th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Nombre)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Descripcion)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.DuracionMin)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.FechaDeRegistro)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.FechaDeLanzamiento)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Estatus)
			</td>
			<td>
				@Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
				@Html.ActionLink("Eliminar", "Delete", new { id = item.Id }) |
				@Html.ActionLink("Episodios", "EpisodesIndex", new { id = item.Id })
			</td>
		</tr>
	}

</table>


@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")

	<script type="text/javascript">
		$("#btnAbrirRegistro").click(function () {
			$("#modalRegistro").modal('show');
		});
	</script>
}