@model VideoOnDemand.Web.Models.PaginatorViewModel<VideoOnDemand.Web.Models.MovieViewModel>

@{
    ViewBag.Title = "Index";

}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body class="container-fluid">
<div id="carouselExampleIndicators" class="carousel slide " data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner ">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/Content/Media/Extraordinario.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/Media/Tropa Heroes.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/Media/Valerian.jpg" alt="Third slide">
        </div>
        <div class="card">

        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
    <br>

<h4>Películas</h4>

<div class="card-deck">
		@foreach (var item in Model.Results.Take(6).ToList())
        {

            <a href="/Pelicula/Details/@item.Id">
                <div class="card" id="tarjeta" style="margin:2px">
                    <img class="card-img" src="~/Content/Media/placeholder.jpg" alt="Card image cap">
                    <div class="card-img-overlay">
                        <h6 class="card-title" style="color:black;">@item.Nombre</h6>
                    </div>
                </div>
            </a>
        }

    <a href="/Pelicula/Lista">
        <div class="card" id="tarjeta" style="margin:2px">
            <img class="card-img" src="~/Content/Media/placeholder.jpg" alt="Card image cap">
            <div class="card-img-overlay">
                <h6>Ver más</h6>
            </div>
        </div>
    </a>
</div><br>
    

    @foreach (var genero in (List<string>)ViewBag.ListaGeneros)
    {
        <div class="row" style="vertical-align:bottom">
            <div class="col-md-3"><h4>Películas de @genero</h4></div>
            <div class="col-md-2">
                <a href="/Pelicula/Lista"><h5>Ver más</h5></a>
            </div>
             
        </div>
        <div class="card-deck">
            @foreach (var item in Model.Results.Take(6).ToList())
            {
                <a href="/Pelicula/Details/@item.Id">
                    <div class="card" id="tarjeta" style="margin:2px">
                        <img class="card-img" src="~/Content/Media/placeholder.jpg" alt="Card image cap">
                        <div class="card-img-overlay">
                            <h6 class="card-title" style="color:black;">@item.Nombre</h6>
                        </div>
                    </div>
                </a>
            }

            <a href="/Pelicula/Lista?Search=&genero=@genero&pageSize=10">
                <div class="card" id="tarjeta" style="margin:2px">
                    <img class="card-img" src="~/Content/Media/placeholder.jpg" alt="Card image cap">
                    <div class="card-img-overlay">
                        <h6>Ver más</h6>
                    </div>
                </div>
            </a>
        </div>
        <br>
    }

    







    

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

</body>