@model VideoOnDemand.Web.Models.PaginatorViewModel<VideoOnDemand.Web.Models.MovieViewModel>

@{
    ViewBag.Title = "Index";

}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">

</head>

<br>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/Content/Media/Slide.svg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/Media/Slide.svg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/Media/Slide.svg" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


<h2 style="color:white">Películas</h2>

<form class="form-inline md-form mr-auto mb-4" style="color:white;">
    <div class="form-inline">
        <<div class="col-md-3">
            <label>Nombre de la Pelicula</label>
            <input type="text" id="busqueda" name="Search" class="form-control" value=@ViewBag.Busqueda>
        </div>
        

        <div class="col-md-3">
            <label>Genero de la Pelicula</label>
            <select id="genero" name="genero" class="form-control">
                @if (String.IsNullOrEmpty(ViewBag.Genero))
                {
                    <option value="">Seleccione una opción</option>
                }
                else
                {
                    <option value="">Seleccione una opción</option>
                    <option value=@ViewBag.Genero>@ViewBag.Genero</option>
                }

                @foreach (var genero in (List<string>)ViewBag.ListaGeneros)
                {
                    <option value="@genero">@genero</option>
                }
            </select>
        </div>

        <div class="col-md-2">
            <label>Peliculas por pagina</label>
            <input type="number" class="form-control" id="pageSize" name="pageSize" min="1" value="@Model.PageSize" />
        </div>


    </div>
    <div>
        <button class="btn btn-primary" type="submit" value="Buscar">Buscar</button>
    </div>
</form>



