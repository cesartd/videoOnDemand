@model VideoOnDemand.Web.Models.MovieViewModel

@{
    ViewBag.Title = "Details";
}
<style>
    section{
        margin-top:100px;
        
        margin:auto;
        width:980px;
        margin-top:50px;
    }
    .ImgPeli h1 {
        text-align:center;
    }
    .ImgPeli {
        float:right;
        padding:10px;
        width:300px;
        height:300px;
        border:2px solid #808080;
    }
    .InfoPeli {
        float:left;
        padding:10px;
        width:600px;
     }
    article {
        margin:auto;
        width:980px;
        box-sizing:border-box;
        clear:both;
        padding:10px;

    }
    .masComent {
        border:1px solid #000000;
        width:900px;
        height:100px;
        margin:auto;
    }
    
    dd{
    text-align:left;
    }

</style>
<section>
    <div class="ImgPeli">
        <h1 >
            Imagen no encontrada.
        </h1>

    </div>
    <div class="InfoPeli">
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Nombre: 
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nombre)
            </dd>

            <dt>
				Descripcion: 
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Descripcion)
            </dd>

            <dt>
                Duracion:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DuracionMin)
            </dd>

            <dt>
                Fecha De Registro:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FechaDeRegistro)
            </dd>

            <dt>
               Fecha de Lanzamiento:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FechaDeLanzamiento)
            </dd>

        </dl>

        <a href="https://www.youtube.com/watch?v=tmUximhgYnI">Reproducir</a>
        <table class="table">
            <thead>
                <tr>
                    <th colspan="3"><h1>@Html.DisplayFor(model => model.Nombre)</h1></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td colspan="3"><label>Duración :</label> @Html.DisplayFor(model => model.DuracionMin) <label>Min.</label></td>
                </tr>
                <tr>
                    <td colspan="3"><label>Fecha de lanzamiento :</label> @Html.DisplayFor(model => model.FechaDeLanzamiento)</td>
                </tr>
                <tr>                    
                    <td colspan="3">@Html.DisplayFor(model => model.Descripcion)</td>
                </tr>
                <tr>
                    <td><label>Actores:</label></td>
                    <td colspan="2">@Html.DisplayFor(model => model.ActoresDisponibles)</td>
                   
                </tr>
                <tr>
                    <td><label>Género:</label></td>
                    <td colspan="2">@Html.DisplayFor(model => model.GenerosSeleccionados)</td>
                </tr>
                <tr>
                    <td>Play</td>
                    <td>Watch</td>
                    <td>Add list</td>
                </tr>
            </tbody>
        </table>

        <p>
           
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn-default">@Html.ActionLink("Regresar", "Index")</button>
                <button class="btn btn-default" onclick="location.href = 'https://www.youtube.com/watch?v=tmUximhgYnI'"> Reproducir</button>
            </div>
        </p>
    </div>
    <div class="container-fluid">
        
            <h4>@Html.DisplayFor(model => model.Nombre)</h4>
        <br />
        <label><b>Duración:</b>@Html.DisplayFor(model => model.DuracionMin)</label>
        <br />
        <label> <b>Fecha de lanzamiento: </b> @Html.DisplayFor(model => model.FechaDeLanzamiento) </label>
        <br />
        <label><b>Descripción</b></label>
        <label> <b> Generos: </b></label>
    </div>
</section>
<article>
    <h4>Comentarios:</h4>
    <form class="form-horizontal">
        <div class="form-group">
            <div class="col-sm-10">
                <input type="email" class="form-control" id="inputEmail3" placeholder="Deje su comentario aquí">
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Agregar</button>
            </div>
        </div>
    </form>
    <div class="masComent">

    </div>
</article>

