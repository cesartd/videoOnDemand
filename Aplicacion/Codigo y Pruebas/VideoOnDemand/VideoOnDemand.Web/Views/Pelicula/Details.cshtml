@model VideoOnDemand.Web.Models.MovieViewModel

@{
    ViewBag.Title = "Details";
}
<style>
    section{
        margin-top:100px;
        
        margin:auto;
        width:980px;
        margin-top:50px;
    }
    .ImgPeli h1 {
        text-align:center;
    }
    .ImgPeli {
        
        float:left;
        padding:10px;
        width:300px;
        height:300px;
        border:2px solid #808080;
       
        
    }
    .InfoPeli {
        float:right;
        padding:10px;
        width:600px;
        
        
    
    }
    article {
        
        width:980px;
       
        box-sizing:border-box;
        clear:both;
        padding:10px;

    }
    .masComent {
        border:1px solid #000000;
        width:900px;
        height:100px;
        margin:auto;
    }
</style>
<section>
    <div class="ImgPeli">
        <h1 >
            Imagen no encontrada.
        </h1>

    </div>
    <div class="InfoPeli">
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Nombre: 
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nombre)
            </dd>

            <dt>
				Descripcion: 
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Descripcion)
            </dd>

            <dt>
                Duracion:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DuracionMin)
            </dd>

            <dt>
                Fecha De Registro:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FechaDeRegistro)
            </dd>

            <dt>
               Fecha de Lanzamiento:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FechaDeLanzamiento)
            </dd>

        </dl>

        <a href="https://www.youtube.com/watch?v=tmUximhgYnI">Reproducir</a>
        <p>
            @Html.ActionLink("Regresar", "Index")
        </p>
    </div>
    
</section>
<article>
    <h4>Comentarios:</h4>
    <form class="form-horizontal">
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">Mi comentario</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="inputEmail3" placeholder="Escriba aquí">
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Agregar</button>
            </div>
        </div>
    </form>
    <div class="masComent">

    </div>
</article>

