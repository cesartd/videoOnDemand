@model IEnumerable<VideoOnDemand.Web.Models.EpisodioViewModel>

@{
    ViewBag.Title = "Details";
    int? num = 0;
}

<h2>Details</h2>


<ul class="nav nav-tabs">

    @foreach (var item in Model)
    {
        if (@num != item.Temporada)
        {
            num = item.Temporada;
            <li class="nav-item"><a class="nav-link disabled" href="#">Temporada @item.Temporada</a></li>
        }
    }
</ul>



